<Window x:Class="CyberSecurityChatBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity ChatBot Assistant" Height="700" Width="900"
        Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                    <Setter Property="BorderBrush" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Submit Button Style -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4EC9B0"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDCDC"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3E3E42"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Item Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="5">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4EC9B0"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Quiz Answer RadioButton Style -->
        <Style x:Key="QuizAnswerRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="OuterEllipse" 
                                     Width="16" 
                                     Height="16" 
                                     Stroke="#4EC9B0" 
                                     StrokeThickness="1" 
                                     Fill="Transparent"/>
                            <Ellipse x:Name="InnerEllipse" 
                                     Width="8" 
                                     Height="8" 
                                     Fill="#4EC9B0" 
                                     Margin="-20,0,0,0" 
                                     Visibility="Collapsed"/>
                            <ContentPresenter Margin="5,0,0,0" 
                                              VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="#FFDCDC"/>
                                <Setter TargetName="InnerEllipse" Property="Fill" Value="#FFDCDC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Cybersecurity ChatBot Assistant"
                   FontSize="28" FontWeight="Bold"
                   Foreground="#4EC9B0"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button x:Name="CyberSecurityQuestionsButton" 
                    Content="Start Quiz" 
                    Width="150"
                    Click="CyberSecurityQuestionsButton_Click"
                    ToolTip="Test your cybersecurity knowledge"/>

            <Button x:Name="QuickTipsButton" 
                    Content="Quick Tips" 
                    Width="150"
                    Click="QuickTipsButton_Click"
                    ToolTip="Get random cybersecurity tips"/>
        </StackPanel>

        <!-- Quiz/Tip Output Area -->
        <Border Grid.Row="2" BorderBrush="#555555" BorderThickness="1" 
                Padding="15" CornerRadius="5" Background="#2D2D30" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TipsOutputTitleBlock" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#4EC9B0" 
                           Margin="0,0,0,5"/>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled" 
                              MaxHeight="300">
                    <StackPanel>
                        <TextBlock x:Name="TipsOutputContentBlock" 
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   LineHeight="24"/>
                        <StackPanel x:Name="QuizAnswersPanel" 
                                    Margin="0,10,0,0" 
                                    Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- User Feedback Area -->
        <Border Grid.Row="3" 
                Background="#252526" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="UserFeedback" 
                           FontSize="14" 
                           Foreground="#FFDCDC" 
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Score Display -->
        <StackPanel Grid.Row="4" 
                    x:Name="ScorePanel"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,15"
                    Visibility="Collapsed">
            <TextBlock Text="Score: " 
                       FontSize="16" 
                       Foreground="#4EC9B0"/>
            <TextBlock x:Name="ScoreTextBlock" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#4EC9B0"/>
        </StackPanel>

        <!-- Submit Answer Button -->
        <Button Grid.Row="4"
                x:Name="SubmitAnswerButton" 
                Content="Submit Answer" 
                HorizontalAlignment="Center"
                Style="{StaticResource SubmitButtonStyle}"
                Click="SubmitAnswerButton_Click"
                Visibility="Collapsed"/>

        <!-- Tasks Section -->
        <GroupBox Grid.Row="5" 
                  Header="Your Tasks" 
                  Margin="0,0,0,10" 
                  BorderBrush="#555555" 
                  Foreground="#4EC9B0" 
                  FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Task Input -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TaskInputTextBox" 
                             Width="400" 
                             Height="30"
                             FontSize="14" 
                             VerticalContentAlignment="Center"
                             Background="#252526" 
                             Foreground="White"
                             BorderBrush="#5A5A5A" />
                    <Button Content="Add Task" 
                            Width="80" 
                            Click="AddTaskButton_Click"/>
                </StackPanel>

                <!-- Task List -->
                <ListBox x:Name="TaskListBox" 
                         Grid.Row="1" 
                         Background="#2D2D30" 
                         Foreground="White" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </GroupBox>

        <!-- Chat Input -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Stretch">
            <TextBox x:Name="UserInputTextBox" 
                     Width="650" 
                     Height="40"
                     FontSize="16" 
                     VerticalContentAlignment="Center"
                     KeyDown="UserInputTextBox_KeyDown"
                     Background="#252526" 
                     Foreground="White" 
                     BorderBrush="#5A5A5A"
                     Text="Type your message here..." 
                     GotFocus="UserInputTextBox_GotFocus"/>
            <Button x:Name="SendButton" 
                    Content="Send" 
                    Width="100" 
                    Height="40" 
                    Click="AskButton_Click" 
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>